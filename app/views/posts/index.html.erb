<h1>All posts (index.html.erb)</h1>

<ul>
    <% @posts.each do |post| %>
        <li>
            <%= post.title %>
            <%= post.body %>
            <% if user_signed_in? %>
                <em>by <%= post.user.email %></em>
            <% end %>
        </li>
    <% end %>
</ul>

<%= link_to "Create new post", new_post_path %>

<% if user_signed_in? %>
    <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete } %>
<% end %>